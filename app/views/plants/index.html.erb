<p id="notice"><%= notice %></p>

<h1>Listing Plants</h1>

<table>
  <thead>
    <tr>
      <th>English common name</th>
      <th>Other common names</th>
      <th>Latin name</th>
      <th>Family names</th>
      <th>Description</th>
      <th>Origin</th>
      <th>Uses</th>
      <th>Cultivation</th>
      <th>Harvesting and seed production</th>
      <th>Pests and diseases</th>
      <th>Cooking and nutrition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.english_common_name %></td>
        <td><%= plant.other_common_names %></td>
        <td><%= plant.latin_name %></td>
        <td><%= plant.family_names %></td>
        <td><%= plant.description %></td>
        <td><%= plant.origin %></td>
        <td><%= plant.uses %></td>
        <td><%= plant.cultivation %></td>
        <td><%= plant.harvesting_and_seed_production %></td>
        <td><%= plant.pests_and_diseases %></td>
        <td><%= plant.cooking_and_nutrition %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

